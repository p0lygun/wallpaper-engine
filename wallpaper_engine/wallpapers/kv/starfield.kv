FloatLayout:
    id : main_container

<Wallpaper>:
    size_hint : (1,1)
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: (0,0)
            size: self.size
    FloatLayout:
        size_hint : (1,1)
        id : container

<Star>:
    size_hint:None,None
    size: dp(root.star_size),dp(root.star_size)
    canvas:
        Color:
            rgba: root.star_color
        Ellipse:
            size:root.size
            pos:root.pos
            segments:360
